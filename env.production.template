# Production Environment Variables for Render
# Copy these to your Render service environment variables

# Application
NODE_ENV=production
PORT=10000

# Database (PostgreSQL for Render)
DATABASE_URL=postgresql://user:password@host:port/database
# Alternative individual DB settings:
DB_HOST=your-postgres-host
DB_PORT=5432
DB_USER=your-postgres-user
DB_PASSWORD=your-postgres-password
DB_NAME=rag_chatbot

# Redis Cache
REDIS_URL=redis://your-redis-host:port

# External Services
QDRANT_URL=https://your-cluster.qdrant.tech
QDRANT_API_KEY=your_qdrant_api_key

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
JINA_API_KEY=your_jina_api_key_here

# Frontend URL (update after frontend deployment)
FRONTEND_URL=https://rag-chatbot-frontend.onrender.com

# News Configuration
NEWS_RSS_FEEDS=https://feeds.bbci.co.uk/news/rss.xml,https://rss.cnn.com/rss/edition.rss

# Session and Cache
SESSION_TTL=3600
CACHE_TTL=1800
