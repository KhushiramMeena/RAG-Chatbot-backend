GEMINI_API_KEY=your_gemini_api_key_here
JINA_API_KEY=your_jina_api_key_here

# MySQL Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USER=chatbot_user
DB_PASSWORD=your_password_here
DB_NAME=news_chatbot

# Redis Connection URL
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Session and Cache TTL (Time To Live) in seconds
SESSION_TTL=3600
CACHE_TTL=1800

# Qdrant Vector Database URL
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# Server Port
PORT=5000

NODE_ENV=production

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# RSS Feed URLs (comma-separated)
NEWS_RSS_FEEDS=https://feeds.reuters.com/reuters/topNews,https://feeds.bbci.co.uk/news/rss.xml,https://rss.cnn.com/rss/edition.rss,https://feeds.feedburner.com/oreilly/radar,https://feeds.feedburner.com/oreilly/radar/atom

# Frontend API and Socket URLs
REACT_APP_API_URL=http://localhost:5001/api
REACT_APP_SOCKET_URL=http://localhost:5001
REACT_APP_ENVIRONMENT=production
REACT_APP_APP_NAME=News Chatbot

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

LOG_LEVEL=info

# Maximum number of articles to process
MAX_ARTICLES=50


EMBEDDING_BATCH_SIZE=10

# RAG retrieval settings
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Metrics collection
ENABLE_METRICS=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Enable debug mode
DEBUG=false

# Enable hot reload (development only)
HOT_RELOAD=false

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Docker Compose project name
COMPOSE_PROJECT_NAME=rag-chatbot

# Container restart policy
RESTART_POLICY=unless-stopped

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Enable automatic backups
ENABLE_BACKUPS=false

# Backup interval (hours)
BACKUP_INTERVAL=24

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================

# Email notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Optional: Sentry for error tracking
SENTRY_DSN=

# Optional: Analytics
GOOGLE_ANALYTICS_ID=

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================

# Custom news sources (JSON format)
CUSTOM_NEWS_SOURCES=

# Custom prompts for AI
CUSTOM_PROMPTS=

# ===========================================
# NOTES
# ===========================================
# 
# 1. Replace 'your_jina_api_key_here' with your actual Jina API key
# 2. The Gemini API key is already set with your provided key
# 3. All database passwords are set to default values for development
# 4. For production, change all default passwords
# 5. Some variables are optional and can be left empty
# 6. Make sure to keep this file secure and never commit it to version control
#
